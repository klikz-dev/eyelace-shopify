{%- liquid
  assign aspect_ratio = 100.0 | divided_by: section.settings.aspect-ratio | round: 4
  assign display_type = section.settings.image-display-type
  assign mobile_display_type = section.settings.mobile-image-display-type
  assign mobile_aspect_ratio = 100.0 | divided_by: section.settings.mobile-aspect-ratio | round: 4
  assign settings_link = settings.color--alternative
  assign top_border = section.settings.top-border

  render 'section-assets', name: 'slideshow', type: 'style'
-%}

<div
  class="slideshow--root"
  data-section-id="{{ section.id }}"
  data-top-border="{{ top_border }}"
  data-background-color="{{ section.settings.background-color }}"
  data-container-width="6"
  data-spacing-above="{{ section.settings.spacing-above }}"
  data-spacing-below="{{ section.settings.spacing-below }}"
>
  {%-
    render 'carousel',
    section_id: section.id,
    view: 'slideshow',
    arrows_enabled: section.settings.arrows-enabled,
    aspect_ratio: aspect_ratio,
    auto_rotate: section.settings.auto-rotate,
    blocks_per_slide: section.settings.blocks_per_slide,
    blocks_per_slide_mobile: section.settings.blocks_per_slide_mobile,
    blocks: section.blocks,
    display_type: display_type,
    dot_nav_enabled: true,
    heading_type: section.settings.heading-type,
    light_text: section.settings.light-text,
    mobile_display_type: mobile_display_type,
    mobile_aspect_ratio: mobile_aspect_ratio,
    mobile_overlay: section.settings.mobile-overlay,
    overlay_style: section.settings.overlay-style,
    rotate_frequency: section.settings.rotate-frequency,
    spacing_around_blocks: section.settings.spacing-around-blocks,
    text_style: section.settings.text-style,
    text_bg_color: section.settings.text-background-color,
    total_blocks: section.blocks.size,
    transition_type: section.settings.transition_type
  -%}
</div>

