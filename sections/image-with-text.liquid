    },
    {
      "id": "link-text",
      "label": "Link text",
      "type": "text"
    },
    {
      "type": "header",
      "content": "Mobile"
    },
    {
      "id": "mobile-image",
      "label": "Mobile image (optional)",
      "type": "image_picker"
    },
    {
      "id": "mobile-overlay",
